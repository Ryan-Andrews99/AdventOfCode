{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist/src",
    "lib": ["ES2023"],
    "target": "es2023"
  },
  "include": ["y2023/**/*.ts", "y2025/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
